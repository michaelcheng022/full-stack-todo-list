<!DOCTYPE html>
<html>
    <head>
        <title>RESTFUL Todos</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
    </head>
    <body>
        <div class="container">
            <h1>Todo List</h1>
            <div class="jumbotron">
                <form id="add-todo" action="/tasks" method="POST">
                    <input type="text" name="task[desc]" placeholder="add a todo" required>
                    <button>+</button>
                </form>
                <% tasks.forEach(function(task) { %>
                    <% if(task._id == current) { %>
                        <form action="/tasks/update/<%= task._id %>?_method=PUT" method="POST">
                            <input type="text" name="task[desc]" value="<%= task.desc %>">
                            <button>edit</button>
                        </form>
                    <% } else { %>
                        <span><a href="/tasks/edit/<%= task._id %>"><%= task.desc %></a></span>
                        <form action="/tasks/<%= task._id %>?_method=DELETE" method="POST">
                            <span><button id="delete-btn" class="btn btn-xs btn-danger">DELETE</button></span>
                        </form>
                    <% } %>
                <% }); %>
            </div>
        </div>
    </body>
</html>