<!DOCTYPE html>
<html>
    <head>
        <title>RESTFUL Todos</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
    </head>
    <body>
        <div class="container">
            <h1>Todo List</h1>
            <div class="container">
                <form id="add-todo" action="/tasks" method="POST">
                    <input type="text" name="task[desc]" placeholder="add a todo" required>
                    <button>+</button>
                </form>
                <div class="container todo-items">
                    <% tasks.forEach(function(task) { %>
                        <a href="/tasks/edit/<%= task._id %>">
                            <div id="item-box" class="container">
                                <span><a href="/tasks/edit/<%= task._id %>"><%= task.desc %></a></span>
                                <form id="delete-form" action="/tasks/<%= task._id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-xs btn-danger">DELETE</button>
                                </form>
                            </div>
                        </a>
                    <% }); %>
                </div>
            </div>
        </div>
    </body>
</html>